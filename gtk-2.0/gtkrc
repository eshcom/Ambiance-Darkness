style "default" {
	xthickness = 1
	ythickness = 1

	#######################
	# Style Properties
	#######################
	GtkButton::child-displacement-x = 1
	GtkButton::child-displacement-y = 1
	GtkButton::default-border = { 0, 0, 0, 0 }

	GtkCheckButton::indicator-size = 16

	GtkPaned::handle-size = 6

	GtkRange::trough-border = 0
	GtkRange::slider-width = 14
	GtkRange::stepper-size = 13
	GtkRange::trough-under-steppers = 1

	GtkScale::trough-border = 0
	GtkScale::slider-width = 23
	GtkScale::slider-length = 14
	GtkScale::trough-side-details = 1

	GtkScrollbar::activate-slider = 1
	GtkScrollbar::trough-border = 0
	# esh: 12 - default, 15 - FullHD 24", 18 - WQHD 27"
	GtkScrollbar::slider-width = 18
	GtkScrollbar::min-slider-length = 31

        GtkScrolledWindow::scrollbar-spacing   = 0
        GtkScrolledWindow::scrollbars-within-bevel = 0

	GtkMenuBar::internal-padding = 0
	GtkMenuBar::shadow-type = GTK_SHADOW_NONE
	GtkExpander::expander-size = 11
	GtkToolbar::internal-padding = 1
	GtkToolbar::shadow-type = GTK_SHADOW_NONE
	GtkTreeView::expander-size = 7
	GtkTreeView::vertical-separator = 0
#	GtkTreeView::odd-row-color = shade (0.96, @base_color)
	GtkNotebook::tab-overlap = -1

	GtkMenu::horizontal-padding = 0
	GtkMenu::vertical-padding = 3

	WnckTasklist::fade-overlay-rect = 0
	# The following line hints to gecko (and possibly other appliations)
	# that the entry should be drawn transparently on the canvas.
	# Without this, gecko will fill in the background of the entry.
	GtkEntry::honors-transparent-bg-hint = 1
	GtkEntry::state-hint = 0

	GtkEntry::progress-border = { 2, 2, 2, 2 }

	GtkProgressBar::min-horizontal-bar-height = 14
	GtkProgressBar::min-vertical-bar-width = 14
	
	GtkImage::x-ayatana-indicator-dynamic = 1
	GtkMenuBar::window-dragging = 1

	GtkWidget::link-color = @link_color
	GtkWidget::visited-link-color = @text_color
	# esh: added new param (focus-line-width = 1 by default)
	#GtkWidget::focus-line-width = 1

	####################
	# Color Definitions
	####################
	color["shade_selected_bg_color"] = shade (0.5, @selected_bg_color)
	
	bg[NORMAL]        = @bg_color
	bg[PRELIGHT]      = shade (1.02, @bg_color)
	# esh: bg[SELECTED] - set focused tab/checked checkbox/button border/etc. bg-color
	bg[SELECTED]      = @selected_bg_color
	bg[INSENSITIVE]   = shade (0.95, @bg_color)
	# esh: bg[ACTIVE] - set selected store (disk) bg-color in doublecmd
	bg[ACTIVE]        = @shade_selected_bg_color

	# esh: fg[NORMAL] - set selected/enabled tab/button/etc. fg-color
	fg[NORMAL]        = @fg_color
	# esh: fg[PRELIGHT] - set tab/button/etc. fg-color on mouse hover
	fg[PRELIGHT]      = @fg_color
	fg[SELECTED]      = @selected_fg_color
	fg[INSENSITIVE]   = darker (@text_color)
	# esh: fg[ACTIVE] - set button fg-color on mouse click
	fg[ACTIVE]        = @fg_color

	text[NORMAL]      = @text_color
	text[PRELIGHT]    = @text_color
	# esh: text[SELECTED] - set focused treeview's item fg-color
	text[SELECTED]    = lighter (@selected_fg_color)
	text[INSENSITIVE] = shade (0.8, @text_color)
	# esh: text[ACTIVE] - set selected treeview's item fg-color
	text[ACTIVE]      = lighter (@text_color)

	base[NORMAL]      = @base_color
	base[PRELIGHT]    = shade (0.98, @bg_color)
	# esh: base[SELECTED] - set focused treeview's item bg-color
	base[SELECTED]    = @selected_bg_color
	base[INSENSITIVE] = shade (0.97, @bg_color)
	# esh: base[ACTIVE] - set selected treeview's item bg-color
	base[ACTIVE]      = @shade_selected_bg_color

	engine "murrine" {
		contrast = 0.6
		arrowstyle = 2
		reliefstyle = 3
		highlight_shade = 1.0
		glazestyle = 0
		# esh: default_button_color - "OK"-button color
		default_button_color = shade (1.1, @default_button)
		gradient_shades = {1.1, 1.0, 1.0, 0.9}
		roundness = 4
		lightborder_shade = 1.26
		lightborderstyle = 1
		listviewstyle = 2
		progressbarstyle = 0
		# esh: colorize_scrollbar = TRUE set orange color for scrollbar
		colorize_scrollbar = FALSE
		menubaritemstyle = 1
		menubarstyle = 1
		menustyle = 0
		# esh: focusstyle = 3 before my changed
		focusstyle = 2
		# esh: added new param focus_color
		#focus_color = @test_color
		handlestyle = 1
		sliderstyle = 3
		scrollbarstyle = 2
		stepperstyle = 3
#		rgba = TRUE
	}
}

