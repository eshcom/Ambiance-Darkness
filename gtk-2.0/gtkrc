style "button" {

	xthickness = 3
	ythickness = 3

	# esh: bg[NORMAL] - button bg-color
	bg[NORMAL] = shade (1.03, @bg_color)
	# esh: bg[PRELIGHT] - button bg-color on mouse hover
	bg[PRELIGHT] = mix (0.86, shade (1.1, @bg_color), @selected_bg_color)
	# esh: bg[ACTIVE] - button bg-color on mouse click (press-down)
	bg[ACTIVE] = mix (0.7, shade (0.8, @bg_color), shade (0.4, @selected_bg_color))
	bg[INSENSITIVE] = @bg_color
	fg[INSENSITIVE] = @button_fg_insens
	# esh: fg[ACTIVE] - button fg-color on mouse click (press-down)
	fg[ACTIVE] = darker (@fg_color)

	engine "murrine" {
		#contrast = 1.0
		textstyle = 1
		border_shades = {1.01, 0.8}
		reliefstyle = 0
		shadow_shades = {1.0, 1.1}
		glowstyle = 5
		glow_shade = 1.02
		lightborder_shade = 1.32
#		lightborderstyle = 0
		#text_shade = 1.04
	}
}

